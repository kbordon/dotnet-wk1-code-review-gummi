@model GummiBearKingdom.Models.Product 

@{
    ViewData["Title"] = "Gummi Bear Kingdom : Products - Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>
<div class="form-two">
    @using (Html.BeginForm())
    {
        <h3><em>Are you sure you want to delete this?</em></h3>
        <input type="submit" value="Delete"/> 
    }

</div>

<p>@Html.ActionLink($"Return to {@Model.Name} details", "Details", "Products", new { id = @Model.ProductId})</p>
