@model GummiBearKingdom.Models.Product
@{
    ViewData["Title"] = "Gummi Bear Kingdom : Products - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a product to the Gummi Bear Kingdom</h2>
<hr/>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype="multipart/form-data"}))
{
    <p>
        @Html.LabelFor(model => model.Name)
    </p>
    <p>
        @Html.EditorFor(model => model.Name)
    </p>
    <p>
        @Html.LabelFor(model => model.Description)
    </p>
    <p>
        @Html.TextBoxFor(model => model.Description)
    </p>
    <p>
        @Html.LabelFor(model => model.Cost)
    </p>
    <p>
        @Html.TextBoxFor(model => model.Cost, new { type = "number"})
    </p>

    <p>
        @Html.LabelFor(model => model.Image)
    </p>
    <p>
        <input type="file" id="Image" name="Image"/>
    </p>


    <input type="submit" value="Submit Product"/>
}

@Html.ActionLink("Back to Products", "Index")